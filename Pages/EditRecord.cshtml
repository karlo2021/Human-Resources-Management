@page "/pages/editrecord/{id:long?}/{idr:long?}"
@model IdentityApp.Pages.EditRecordModel

<form method="post" class="p-2">
    <div class="form-group" hidden>
		<label>ID</label>
		<input class="form-control" readonly asp-for="@Model.Record.Id" />
	</div>	
    <div class="form-group" hidden>
		<label>PersonID</label>
		<input class="form-control" disabled readonly asp-for="@Model.Record.PersonId" />
	</div>
    <div class="form-group">
		<label>Interview Date</label>
		<input type="date" class="form-control" asp-for="@Model.Record.InterviewDate" />
	 </div>
    <div class="form-group">
        <label>Employment Date</label>
        <input type="date" class="form-control" asp-for="@Model.Record.EmploymentDate" />
    </div>
    <div class="form-group">
        <label>Interests</label>
        <input class="form-control" asp-for="@Model.Record.Interests" />
    </div>
    <div class="form-group">
        <label>Rating</label>
        <input class="form-control" asp-for="@Model.Record.Rating" />
    </div>
    <div class="form-group">
        <label>Record Comment</label>
        <textarea class="form-control cols="50" rows="3" asp-for="@Model.Record.Note" 
            placeholder="Enter Comment here" >
        </textarea>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="@Model.Record.Employed" />
        <label class="form-check-label">Employed</label>
    </div>
    <div class="text-center">
		<button type="submit" class="btn btn-secondary">Save</button>
        <a class="btn btn-secondary" asp-page="Overview" >Cancel</a>
	</div>
</form>
